<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SettingsPanelStudent">

    <Button
        android:id="@+id/back_settingsPanelStudent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"
        android:bufferType="normal"
        android:fontFamily="@font/cabin"
        android:selectAllOnFocus="false"
        android:text="@string/back_to_panel_student_SettingsPanelStudent"
        android:textAlignment="center"
        android:textColor="#050000"
        android:textColorHighlight="#050000"
        android:textColorLink="#040000"
        android:textSize="14sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPicture_SettingsPanelStudent"
        app:layout_constraintVertical_bias="0.898" />

    <Button
        android:id="@+id/resetProfilePicture_SettingPanelStudent"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_button"
        android:bufferType="normal"
        android:fontFamily="@font/cabin"
        android:selectAllOnFocus="false"
        android:text="@string/reset_data_user_SettingsPanelStudent"
        android:textAlignment="center"
        android:textColor="#050000"
        android:textColorHighlight="#050000"
        android:textColorLink="#040000"
        android:textSize="14sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPassword_settingPanel" />

    <Button
        android:id="@+id/resetPicture_SettingsPanelStudent"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_button"
        android:bufferType="normal"
        android:fontFamily="@font/cabin"
        android:selectAllOnFocus="false"
        android:text="@string/reset_profile_picture_SettingsPanelStudent"
        android:textAlignment="center"
        android:textColor="#050000"
        android:textColorHighlight="#050000"
        android:textColorLink="#040000"
        android:textSize="14sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetProfilePicture_SettingPanelStudent" />

    <Button
        android:id="@+id/resetPassword_settingPanel"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_button"
        android:bufferType="normal"
        android:fontFamily="@font/cabin"
        android:selectAllOnFocus="false"
        android:text="@string/reset_password_SettingsPanelStudent"
        android:textAlignment="center"
        android:textColor="#050000"
        android:textColorHighlight="#050000"
        android:textColorLink="#040000"
        android:textSize="14sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_settingPanel" />

    <TextView
        android:id="@+id/textview_settingPanel"
        style="@android:style/Widget.TextView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:height="50dp"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/settings_panel_SettingsPanelStudent"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>